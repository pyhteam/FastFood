@model FastFood.Models.Food;
<section class="fs_about_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="fs_about_data">
                    <h1 class="fs_heading">@Model.Name</h1>
                    <p>@Model.Description</p>
                    <a asp-controller="Order" asp-action="AddToCart" class="fs_btn">Buy @string.Format("{0:0,0}", Model.Price) VND</a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="fs_about_img">
                    <img src="~/images/about_img.png" alt="fast-food-about1" class="img-responsive" />
                </div>
            </div>
        </div>
       
    </div>
</section>